<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="447.0" prefWidth="589.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.Controller.InboxController">
    <VBox prefHeight="447.0" prefWidth="410.0">
        <HBox prefHeight="23.0" prefWidth="209.0">
            <TextField fx:id="searchFrTextField" prefHeight="26.0" prefWidth="161.0" promptText="Find Friend" HBox.hgrow="ALWAYS" />
            <Button fx:id="findButton" mnemonicParsing="false" onAction="#onFindButtonClicked" prefHeight="26.0" prefWidth="44.0" text="Find" />
        </HBox>
        <ListView fx:id="friendListView" prefHeight="441.0" prefWidth="209.0" VBox.vgrow="ALWAYS" />
    </VBox>

    <VBox alignment="BOTTOM_RIGHT" prefHeight="447.0" prefWidth="582.0">
        <ScrollPane fx:id="messageScrollPane" prefHeight="429.0" prefWidth="381.0" VBox.vgrow="ALWAYS">
            <VBox fx:id="messageContainer" alignment="BOTTOM_CENTER" prefHeight="429.0" prefWidth="381.0" />
        </ScrollPane>

        <HBox prefHeight="5.0" prefWidth="381.0">
            <TextField fx:id="messageTextField" prefHeight="0.0" prefWidth="327.0" promptText="Message" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onSendButtonClicked" text="Send" />
        </HBox>
    </VBox>
</HBox>
