<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import com.sun.javafx.scene.control.DatePickerContent?>
<?import javafx.scene.control.DatePicker?>
<VBox alignment="CENTER" prefHeight="436.0" prefWidth="473.0" spacing="20.0" stylesheets="@css/sign-up-view.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.Controller.SignUpViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

   <Label fx:id="messageLabel" text="Sign Up" />
   <HBox prefHeight="34.0" prefWidth="433.0">
      <TextField fx:id="usernameTextField" promptText="Username" HBox.hgrow="ALWAYS" />
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <PasswordField fx:id="passwordTextField" promptText="Password" HBox.hgrow="ALWAYS" />
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <PasswordField fx:id="confirmPasswordTextField" promptText="Confirm Password" HBox.hgrow="ALWAYS" />
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <TextField fx:id="nameTextField" promptText="Name" HBox.hgrow="ALWAYS" />
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <TextField fx:id="addressTextField" promptText="Address" HBox.hgrow="ALWAYS" />
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <TextField fx:id="phoneNumberTextField" promptText="Phone number" HBox.hgrow="ALWAYS" />
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <TextField fx:id="emailTextField" promptText="Email" HBox.hgrow="ALWAYS" />
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <DatePicker fx:id="birthdayPicker" promptText="Birthday" HBox.hgrow="ALWAYS" />
   </HBox>
    <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#onSignUpButtonClicked" text="Sign Up" />
   <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back" />
</VBox>
