<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<TabPane fx:id="adminTabPane" prefHeight="500.0" prefWidth="819.0" side="LEFT" stylesheets="@css/admin-view.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.Controller.AdminController">

   <Tab fx:id="admin_info" closable="false" text="Admin">
      <fx:include source="admin-info-view.fxml" />
      <graphic>
         <ImageView fitHeight="28.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@assets/administrator.png" />
            </image>
         </ImageView>
      </graphic>
   </Tab>

   <Tab fx:id="member_management" closable="false" text="Member">
      <fx:include source="member-management-view.fxml" />
      <graphic>
         <ImageView fitHeight="27.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@assets/comunication.png" />
            </image>
         </ImageView>
      </graphic>
   </Tab>

   <Tab fx:id="book_management" closable="false" text="Book">
      <fx:include source="book-management-view.fxml" />
      <graphic>
         <ImageView fitHeight="67.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@assets/books-stack-of-three.png" />
            </image>
         </ImageView>
      </graphic>
   </Tab>

   <Tab fx:id="borrow_request_tab" closable="false" text="Borrow Request">
      <fx:include source="borrow-request-view.fxml" />
      <graphic>
         <ImageView fitHeight="80.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@assets/quote-request.png" />
            </image>
         </ImageView>
      </graphic>
   </Tab>

   <Tab fx:id="inbox" closable="false" text="Inbox">
      <fx:include source="inbox-view.fxml" />
      <graphic>
         <ImageView fitHeight="87.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@assets/mail-inbox-app.png" />
            </image>
         </ImageView>
      </graphic>
   </Tab>

</TabPane>
