<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@css/add-book-view.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" layoutX="150.0" layoutY="50.0" prefHeight="300.0" prefWidth="300.0" spacing="15.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="300.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Title:" />
                  <TextField fx:id="bookNameField" prefHeight="26.0" prefWidth="200.0" promptText="title" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="300.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Author:" />
                  <TextField fx:id="authorField" prefHeight="26.0" prefWidth="200.0" promptText="author" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="300.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Publisher:" />
                  <TextField fx:id="publisherField" prefHeight="26.0" prefWidth="200.0" promptText="publisher" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="300.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ISBN:" />
                  <TextField fx:id="isbnField" prefHeight="26.0" prefWidth="200.0" promptText="ISBN" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="300.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity:" />
                  <TextField fx:id="quantityField" prefHeight="26.0" prefWidth="200.0" promptText="quantity" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
      
                                                      <Button fx:id="addBookButton" mnemonicParsing="false" onAction="#onAddBookButtonClicked" prefHeight="40.0" prefWidth="115.0" text="Add Book" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="Button" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
