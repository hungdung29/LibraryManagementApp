<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="863.0" prefWidth="617.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.Controller.BookController">
    <HBox prefHeight="100.0" prefWidth="200.0" spacing="6.0">
        <TextField fx:id="searchTextField" HBox.hgrow="ALWAYS" />
        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchButtonClicked" text="Search" />
    </HBox>
    <TableView fx:id="bookTable" prefHeight="1067.0" prefWidth="617.0">
        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="232.0" text="Title" />
            <TableColumn fx:id="authorColumn" prefWidth="127.0" text="Author" />
            <TableColumn fx:id="isbnBorrowColumn" prefWidth="110.0" text="ISBN" />
            <TableColumn fx:id="remainingColumn" prefWidth="174.0" text="Remaining" />
        </columns>
    </TableView>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
