<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="436.0" prefWidth="473.0" spacing="20.0" stylesheets="@css/hello-view.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.Controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fitHeight="223.0" fitWidth="222.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@assets/resource.png" />
      </image>
   </ImageView>
   <Label fx:id="messageLabel" text="Welcome" />

    <Button fx:id="signInButton" onAction="#onSignInButtonClick" text="Sign In" />
   <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#onSignUpButtonClicked" text="Sign Up" />
</VBox>
